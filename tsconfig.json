{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/components": ["components/"],
      "@/components/*": ["components/*"],
      "@/hooks": ["hooks/"],
      "@/hooks/*": ["hooks/*"],
      "@/modules/*": ["modules/*"],
      "@/utils": ["utils/"],
      "@/utils/*": ["utils/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "@types/*", "**/*.ts", "**/*.tsx", ".eslintrc.cjs", "next.config.js"]
}
